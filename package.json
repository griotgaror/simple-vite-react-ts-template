{
    "name": "simple-vite-react-ts-template",
    "private": true,
    "version": "0.1.0",
    "scripts": {
        "dev": " vite --config vite.config.mts",
        "build": "vite build --config vite.config.mts",
        "testApi": "./node_modules/nodemon/bin/nodemon.js testApi/server.js",
        "lint:check": "npx eslint ./src",
        "lint:fix": "npx eslint ./src --fix",
        "prettier:check": "npx prettier ./src --check",
        "prettier:fix": "npx prettier ./src --write",
        "format": "npm run prettier:fix && npm run lint:fix",
        "test": "vitest --run",
        "test:ui": "vitest --ui",
        "bump-version": "node nextVersion.cjs",
        "bump-version:auto-commit": "node nextVersion.cjs --auto-commit",
        "submodule-update": "git submodule update --remote",
        "prepare": "husky"
    },
    "dependencies": {
        "@types/jest": "^29.5.14",
        "axios": "^1.7.9",
        "framer-motion": "^10.18.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-intersection-observer": "^9.15.1",
        "react-responsive": "^9.0.2",
        "react-router-dom": "^6.29.0",
        "styled-components": "^5.3.11",
        "vite": "^5.4.14",
        "vite-plugin-html": "^3.2.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^14.3.1",
        "@types/cors": "^2.8.17",
        "@types/node": "^20.17.17",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/ui": "^2.1.9",
        "cors": "^2.8.5",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-react-hooks": "^4.6.2",
        "express": "^4.21.2",
        "husky": "^9.1.7",
        "jsdom": "^25.0.1",
        "nodemon": "^3.1.9",
        "prettier": "3.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "vite-plugin-checker": "^0.8.0",
        "vitest": "^2.1.9"
    }
}
